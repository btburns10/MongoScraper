<div class="container">

  <div class="article">
    <div class="row">
    <div class="col s12 m6">
      {{#each articles}}
        <div class="card #eceff1 blue-grey lighten-5">
          <div class="card-content white-text">
            <span class="card-title">{{this.title}}</span>
            <p>{{this.summary}}</p>
          </div>
          <div class="card-action blue-grey darken-1">
            <a href="{{this.link}}">Click here to read more!</a>
          </div>
        </div>
      {{/each}}
    </div>
    </div>
  </div>

</div>